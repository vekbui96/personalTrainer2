<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".nutritionMain">

    <Button
        android:id="@+id/updateMacros"
        android:layout_width="228dp"
        android:layout_height="211dp"
        android:layout_marginTop="16dp"
        android:background="@color/colorPrimary"
        android:text="@string/updatemacros"
        android:textColor="@color/colorAccent"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/weightText"
        android:layout_width="98dp"
        android:layout_height="33dp"
        android:layout_marginStart="33dp"
        android:layout_marginLeft="33dp"
        android:text="Current Weight"
        android:textColor="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/goalWeight"
        android:layout_width="94dp"
        android:layout_height="32dp"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="15dp"
        android:text="Goal Weight"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weightText" />

    <EditText
        android:id="@+id/currentWeightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/weightText"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/goalWeightValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="9dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/goalWeight"
        app:layout_constraintTop_toBottomOf="@+id/currentWeightValue" />

    <TextView
        android:id="@+id/proteinLabel"
        android:layout_width="101dp"
        android:layout_height="33dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:text="Protein"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fatsLabel" />

    <TextView
        android:id="@+id/carbsLabel"
        android:layout_width="98dp"
        android:layout_height="30dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:text="Carbs"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/proteinLabel" />

    <TextView
        android:id="@+id/fatsLabel"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="1dp"
        android:text="Fats"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="71dp"
        android:text="Calories"
        android:textColor="@color/colorAccent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goalWeight" />

    <TextView
        android:id="@+id/userCal"
        android:layout_width="141dp"
        android:layout_height="41dp"
        android:layout_marginStart="86dp"
        android:layout_marginLeft="86dp"
        android:layout_marginTop="58dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/goalWeightValue" />

    <TextView
        android:id="@+id/userFat"
        android:layout_width="141dp"
        android:layout_height="34dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/fatsLabel"
        app:layout_constraintTop_toBottomOf="@+id/userCal" />

    <TextView
        android:id="@+id/userProtein"
        android:layout_width="140dp"
        android:layout_height="34dp"
        android:layout_marginStart="85dp"
        android:layout_marginLeft="85dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/proteinLabel"
        app:layout_constraintTop_toBottomOf="@+id/userFat" />

    <TextView
        android:id="@+id/userCarbs"
        android:layout_width="140dp"
        android:layout_height="28dp"
        android:layout_marginStart="88dp"
        android:layout_marginLeft="88dp"
        android:text="0"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintStart_toEndOf="@+id/carbsLabel"
        app:layout_constraintTop_toBottomOf="@+id/userProtein" />

</android.support.constraint.ConstraintLayout>